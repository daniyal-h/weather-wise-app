<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <EditText
        android:id="@+id/defaultCityInputTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:digits="abcdefghijklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ "
        android:ems="10"
        android:inputType="text"
        android:hint="Enter City..."
        android:textColor="@color/text_dark"
        android:fontFamily="@font/domine_regular"/>

    <TextView
        android:id="@+id/cityTextView"
        android:layout_width="379dp"
        android:layout_height="wrap_content"
        android:inputType="textNoSuggestions"
        android:digits="abcdefghijklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ "
        android:textSize="24sp"
        android:textAlignment="center"
        android:autoLink="none"
        android:textColor="@color/text_dark"
        android:fontFamily="@font/domine_bold"/>

    <Button
        android:id="@+id/buttonFetchWeather"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Get Weather"
        android:textColor="@color/text_dark"
        android:fontFamily="@font/domine_medium"/>

    <TextView
        android:id="@+id/weatherDetailsTextView"
        android:layout_width="match_parent"
        android:layout_height="571dp"
        android:textSize="18sp"
        android:textColor="@color/text_dark"
        android:fontFamily="@font/domine_regular"/>

</LinearLayout>
