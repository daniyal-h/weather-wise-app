<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.WeatherWiseApp"
        tools:targetApi="33">
        <activity
            android:name="com.daniyalh.WeatherWiseApp.presentation.home.MainActivity"
            android:exported="true"
            android:theme="@style/Theme.WeatherWiseApp">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name="com.daniyalh.WeatherWiseApp.presentation.weather.WeatherDetailActivity"
            android:parentActivityName="com.daniyalh.WeatherWiseApp.presentation.home.MainActivity"
            android:theme="@style/Theme.WeatherWiseApp"
            android:exported="false" />

        <activity
            android:name="com.daniyalh.WeatherWiseApp.presentation.forecast.ForecastDetailActivity"
            android:parentActivityName="com.daniyalh.WeatherWiseApp.presentation.weather.WeatherDetailActivity"
            android:theme="@style/Theme.WeatherWiseApp"
            android:exported="false" />

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
    </application>

</manifest>